#include <stdio.h>

int main()
{
char operator;
double num1,num2,result;
printf("Enter an operator");
scanf("%c",&operator);
printf("enter the operend");
scanf("%lf %lf",&num1,&num2);
switch(operator){
    case'+':printf("Add of two numbers%.2lf",num1+num2);
    break;
    case'-':printf("Sub of Two numbers%.2lf",num1-num2);
    break;
    case'*':printf("mul of two number%.2lf",num1*num2);
    break;
    case '/':
    if (num2 !=0){
    printf("result%.2lf",result);
    break;}
    else{
        printf("Error Division by zero is not allowed");
        return 1;
    }
    printf("result:%.2f",result);
    break;
    default:printf("Error : Invalid Opreator");
}

    return 0;
}
